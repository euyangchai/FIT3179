{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "height": 300,
  "width": 600,
  "title": "Age Distribution of FIFA 19 Players per Position",
  "data": {
    "url": "https://raw.githubusercontent.com/euyangchai/FIT3179/main/datavis2/fifa_position_age_2.csv"
  },
  "transform": [{"filter": {"field": "Type", "oneOf": ["min", "most", "max"]}}],
  "encoding": {
    "x": {
      "field": "Age",
      "type": "quantitative",
      "title": "Age",
      "scale": {"domainMax": 50, "domainMin": 10}
    },
    "y": {
      "field": "Position",
      "type": "nominal",
      "title": "Player Position",
      "axis": {"offset": 5, "ticks": false, "minExtent": 70, "domain": false}
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {"field": "Position", "type": "nominal"},
        "color": {"value": "#f6abb6"},
        "size": {"value": 8}
      }
    },
    {
      "mark": {"type": "point", "filled": true},
      "encoding": {
        "color": {
          "field": "Type",
          "type": "nominal",
          "scale": {
            "domain": ["min", "most", "max"],
            "range": ["#6497b1", "#03396c", "#005b96"]
          },
          "title": "Age"
        },
        "size": {"value": 1000},
        "opacity": {"value": 1},
        "tooltip": [
          {"field": "Position", "type": "nominal"},
          {"field": "Age", "type": "quantitative"}
        ]
      }
    }
  ],
  "config": {}
}