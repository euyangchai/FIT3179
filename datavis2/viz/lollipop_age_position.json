{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "height": 300,
  "width": 550,
  "data": {
    "url": "https://raw.githubusercontent.com/euyangchai/FIT3179/main/datavis2/data/fifa_position_age_2.csv"
  },
  "transform": [{"filter": {"field": "Type", "oneOf": ["min", "most", "max"]}}],
  "encoding": {
    "x": {
      "field": "Age",
      "type": "quantitative",
      "title": "Age",
      "scale": {"domainMax": 50, "domainMin": 10}
    },
    "y": {
      "field": "Position",
      "type": "nominal",
      "title": null,
      "axis": {"offset": 5, "ticks": false, "minExtent": 70, "domain": false}
    }

  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {"field": "Position", "type": "nominal"},
        "color": {"value": "#4E4E50"},
        "size": {"value": 8}
      }
    },
    {
      "mark": {"type": "point", "filled": true},
      "encoding": {
        "color": {
          "field": "Type",
          "type": "nominal",
          "scale": {
            "domain": ["min", "most", "max"],
            "range": ["#97CAEF", "#F64C72", "#3FEEE6"]
          },
          "legend": null
        },
        "size": {"value": 800},
        "opacity": {"value": 1},
        "tooltip": [
          {"field": "Position", "type": "nominal"},
          {"field": "Age", "type": "quantitative"}
        ]
      }
    }
  ],

  "config": {
    "background": "#1A1A1D",
    "axis": {
      "labelPadding": 10,
      "labelColor": "#C5C6C7",
      "labelFontSize": 15,
      "labelFont": "Sans-Serif",
      "titleColor": "#C5C6C7",
      "titleFontSize": 15,
      "gridOpacity": 0.1
    },
    "view": {
      "stroke": "transparent"
    }
  }
}
