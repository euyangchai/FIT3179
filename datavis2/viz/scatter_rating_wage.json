{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "Drag a rectangular brush to show (first 10) selected points in a table.",
  "data": {
    "url": "https://raw.githubusercontent.com/euyangchai/FIT3179/main/datavis2/data/fifa_cleaned.csv"
  },
  "params": [
    {
      "name": "Player_Rating_Above",
      "value": 60,
      "bind": {
        "input": "range",
        "min": 60,
        "max": 100,
        "step": 1,
        "name": "Minimum Rating"
      }
    },
    {
      "name": "Position_Selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Attacker",
          "Midfielder",
          "Defender",
          "Goalkeeper"
        ],
        "labels": [
          "Show All",
          "Attacker",
          "Midfielder",
          "Defender",
          "Goalkeeper"
        ],
        "name": "Select Position: "
      }
    }
  ],
  "transform": [
    {"window": [{"op": "row_number", "as": "row_number"}]},
    {"filter": "datum.Overall > Player_Rating_Above"},
    {"filter": "datum.Wage > 10000"},
    {"filter": "Position_Selection == null || datum.Position == Position_Selection"}
  ],

  "hconcat": [
    {
      "selection": {
        "brush": {"type": "interval"},
        "Position_highlight": {
          "type": "multi",
          "fields": ["Position"],
          "bind": "legend"
        }
        },
      "mark": {"type": "point", "shape": "square", "filled": true},
      "height": 300,
      "width": 450,
      "encoding": {
        "x": {
          "field": "Overall",
          "type": "quantitative",
          "scale": {"domain": [60, 100]},
          "title": "Player Rating"
        },
        "y": {
          "field": "Wage",
          "type": "quantitative",
          "axis": {"format": ".1s"},
          "title": "Wage per Week (€)"
        },
        "color": {"field": "Position", "type": "nominal"},
        "opacity": {
          "condition": {"selection": "Position_highlight", "value": 1},
          "value": 0.1
        }
      }
    },
    {
      "transform": [
        {"filter": {"selection": "brush"}},
        {"window": [{"op": "rank", "as": "rank"}]},
        {"filter": {"field": "rank", "lt": 10}}
      ],
      "hconcat": [
        {
          "width": 50,
          "title": "Player Name",
          "mark": "text",
          "height": 300,
          "encoding": {
            "text": {"field": "Name", "type": "nominal"},
            "y": {"field": "row_number", "type": "ordinal", "axis": null}
          }
        },
        {
          "width": 50,
          "title": "Weekly Wage (€)",
          "mark": "text",
          "height": 300,
          "encoding": {
            "text": {"field": "Wage", "type": "nominal", "format": ".1s"},
            "y": {"field": "row_number", "type": "ordinal", "axis": null}
          }
        }
      ]
    }
  ],
  "resolve": {"legend": {"color": "independent"}},
  "config": {
    "background": "#1A1A1D",
    "axis": {
      "labelPadding": 10,
      "labelColor": "#C5C6C7",
      "labelFontSize": 15,
      "labelFont": "Sans-Serif",
      "titleColor": "#C5C6C7",
      "titleFontSize": 15,
      "titlePadding": 10,
      "grid": false
    },
    "view": {
      "stroke": "transparent"
    },
    "text": {
      "color": "#C5C6C7",
      "fontSize": 15
    },
    "legend": {
      "labelColor": "#C5C6C7",
      "titleColor": "#C5C6C7",
      "labelFontSize": 13
    },
    "title": {
      "color": "#C5C6C7",
      "fontSize": 18
    }
  }
}
