{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/euyangchai/FIT3179/main/datavis2/data/fifa_prem_league.csv"
  },
  "height": 300,
  "width": 400,
  "encoding": {
    "x": {
      "field": "Overall",
      "type": "quantitative",
      "aggregate": "mean",
      "stack": "normalize",
      "title": "Normalized Overall Rating of Players per Position",
      "axis": null
    },
    "y": {
      "field": "Club",
      "title": null,
      "axis": {"ticks": false, "labelPadding": 5},
      "scale": {
        "domain": [
          "Liverpool",
          "Manchester City",
          "Manchester United",
          "Chelsea",
          "Leicester City",
          "Tottenham Hotspur",
          "Wolverhampton Wanderers",
          "Arsenal",
          "Sheffield United",
          "Burnley"
        ]
      }
    },
    "color": {
      "field": "Position",
      "type": "nominal",
      "scale": {"range": ["#00cca3", "#487f9c", "#a888bf", "#ff596a"]}
    },
    "tooltip": [
      {"field": "Club", "type": "nominal"},
      {"field": "Position", "type": "nominal"},
      {
        "field": "Overall",
        "type": "quantitative",
        "aggregate": "mean",
        "format": ".1f",
        "title": "Mean Rating (out of 100)"
      }
    ]
  },
  "layer": [
    {"mark": "bar"},
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "stroke": "black",
        "dx": -55,
        "dy": 5,
        "fontWeight": "lighter"
      },
      "encoding": {
        "text": {
          "field": "Overall",
          "type": "quantitative",
          "aggregate": "mean",
          "format": ".1f"
        }
      }
    }
  ],
  "config": {}
}